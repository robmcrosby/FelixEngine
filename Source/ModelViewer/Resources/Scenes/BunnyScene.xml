<?xml version="1.0"?>
<Scene name="TriangleScene">
  <ViewerCamera name="MainCamera">
    <Projection frame="MainWindow" type="frustum" aspect="auto">
      <Volume near="1.0" far="10.0" left="-0.5" right="0.5" top="0.5" bottom="-0.5"/>
    </Projection>
    <OrbitView latitude="20.0" longitude="70" distance="2.0"/>
    <RenderSlots>
      <Slot layer="0" pass="MainPass" frame="MainWindow">
        <ClearState>
          <Color0>0.5, 0.5, 0.5, 1.0</Color0>
        </ClearState>
      </Slot>
    </RenderSlots>
  </ViewerCamera>
  <Model name="Triangle">
    <Transform>
      <Scale>0.2, 0.2, 0.2</Scale>
      <Euler>90.0, 0.0, 0.0</Euler>
    </Transform>
    <RenderSlots>
      <Slot layer="0" pass="MainPass">
        <Mesh name="BunnyMesh" file="bunny.mesh"/>
        <Material>
          <Shader name="ColorShader">
            <Vertex function="SimpleVertex"/>
            <Fragment function="SimpleColor"/>
          </Shader>
          <UniformMap>
            <Uniform name="Color" type="vec4">0.2, 0.2, 0.9, 1.0</Uniform>
          </UniformMap>
        </Material>
      </Slot>
    </RenderSlots>
  </Model>
</Scene>