<?xml version="1.0"?>
<Scene name="TriangleScene">
  <Camera name="MainCamera">
    <Projection frame="MainWindow" type="ortho" aspect="auto">
      <Volume near="0.0" far="10.0" left="-2.0" right="2.0" top="2.0" bottom="-2.0"/>
    </Projection>
    <View>
      <Position>2.0, 2.0, 2.0</Position>
      <Target>0.0, 0.0, 0.0</Target>
      <Up>0.0, 1.0, 0.0</Up>
    </View>
    <RenderSlots>
      <Slot layer="0" pass="MainPass" frame="MainWindow">
        <ClearState>
          <Color0>0.5, 0.5, 0.5, 1.0</Color0>
        </ClearState>
      </Slot>
    </RenderSlots>
  </Camera>
  <Model name="Triangle">
    <Transform>
      <Scale>0.5, 0.5, 0.5</Scale>
      <Euler order="xyz">0.0, 0.0, 1.0</Euler>
      <Translate>1.0, 0.0, 0.0</Translate>
    </Transform>
    <RenderSlots>
      <Slot layer="0" pass="MainPass">
        <Mesh name="CubeMesh" file="cube.mesh"/>
        <Material>
          <Shader name="ColorShader">
            <Vertex function="SimpleVertex"/>
            <Fragment function="SimpleColor"/>
          </Shader>
          <UniformMap>
            <Uniform name="Color" type="vec4">0.2, 0.2, 0.9, 1.0</Uniform>
          </UniformMap>
        </Material>
      </Slot>
    </RenderSlots>
  </Model>
</Scene>