<?xml version="1.0"?>
<Scene name="TextureScene">
  <Model name="Quad">
    <RenderSlots>
      <Slot layer="0">
        <Mesh name="QuadMesh" primitive="plane" size="1.6, 1.6"/>
        <ClearState>
          <Color0>0.5, 0.5, 0.5, 1.0</Color0>
        </ClearState>
        <Material>
          <Shader name="TextureShader">
            <Vertex function="SimpleVertexUV"/>
            <Fragment function="SimpleTexture"/>
          </Shader>
          <TextureMap>
            <Texture name="Icon" file="Images/HelloFelixIcon.png" min="linear" mag="linear"/>
          </TextureMap>
        </Material>
      </Slot>
    </RenderSlots>
  </Model>
</Scene>